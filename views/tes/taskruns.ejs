<% include ../partials/header %>

<h1>List of Task Runs</h1>

<table id="taskrun_table" class="cell-border display compact">
   <thead>
      <tr>
         <th>N</th>
         <th>Name</th>
         <th>ID</th>
         <th>UserName</th>
         <th>TimeCreated</th>
         <th>TimeModified</th>
         <th>Status</th>
      </tr>
   </thead>
   <tbody>

      <% truns = truns["items"]; %>
      <% for (let i = 0; i < truns.length; i++) { %>
      <tr>
         <td> <%= `${i + 1}.` %></td>
         <td> <%= truns[i].name %></td>
         <td> <a href="/tasks/runs/<%= truns[i].id %>"><%= truns[i].id %></a></td>
         <td> <%= id2username(truns[i].createdBy) %></td>
         <td> <%= format_date(truns[i].timeCreated) %></td>
         <td> <%= format_date(truns[i].timeModified) %></td>
         <td> <%= truns[i].status %></td>
      </tr>
      <% } %>
   </tbody>
</table>

<script>
   $(document).ready(function () {
      $('#taskrun_table').DataTable();
   });
</script>

<% include ../partials/footer %>
