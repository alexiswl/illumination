<% include ../partials/header %>

<h1 class="title">List of Task Runs</h1>

<table
  id="taskrun_table"
  class="ui striped selectable celled compact table"
  style="width:100%"
>
  <thead>
    <tr>
      <th>N</th>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>StatusDetails</th>
      <th>CreatedBy</th>
      <th>TimeCreated</th>
      <th>ModifiedBy</th>
      <th>TimeModified</th>
    </tr>
  </thead>
  <tbody>
    <% truns = truns["items"]; %> <% for (let i = 0; i < truns.length; i++) { %>
    <tr>
      <td><%= `${i + 1}.` %></td>
      <td><a href="/tasks/runs/<%= truns[i].id %>"><%= truns[i].id %></a></td>
      <td><%= truns[i].name %></td>
      <td><%= truns[i].description %></td>
      <td><%= truns[i].status %></td>
      <td><%= truns[i].statusDetails %></td>
      <td title="<%= truns[i].createdBy %>">
        <%= id2username(truns[i].createdBy) %>
      </td>
      <td><%= format_date(truns[i].timeCreated) %></td>
      <td title="<%= truns[i].modifiedBy %>">
        <%= id2username(truns[i].modifiedBy) %>
      </td>
      <td><%= format_date(truns[i].timeModified) %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#taskrun_table").DataTable({
      pageLength: 100,
      lengthMenu: [ [10, 50, 100, -1], [10, 50, 100, "All"] ],
      columnDefs: [
        {
          targets: [2, 3, 5],
          render: $.fn.dataTable.render.ellipsis(15)
        }
      ],
      "createdRow": function ( row, data, index ) {
          if ( data[4] === "Completed" ) {
              $('td', row).eq(4).addClass('completed');
          } else if (data[4] === "Pending") {
              $('td', row).eq(4).addClass('pending');
          } else if (data[4] === "Failed" || data[4] === "Aborted") {
              $('td', row).eq(4).addClass('failed');
          } else if (data[4] === "Running") {
              $('td', row).eq(4).addClass('running');
          }

      }
    });
  });
</script>

<% include ../partials/footer %>
