<%- include("partials/header") %>

<h1 class="title"><%= `Available Projects` %></h1>

<table
  id="projects_table"
  class="ui striped selectable celled compact table"
  style="width:100%"
>
  <thead>
    <tr>
      <th>N</th>
      <th>Name</th>
      <th>ID</th>
      <th>OwnerID</th>
      <th>TenantID</th>
      <th>TenantName</th>
      <th>Active</th>
      <th>Information</th>
      <th>TimeCreated</th>
      <th>TimeModified</th>
      <th>BillingMode</th>
      <th>DataSharingEnabled</th>
      <th>StBunID</th>
      <th>StBunName</th>
      <th>StBunOwnerID</th>
    </tr>
  </thead>
  <tbody>
    <% p = projects["items"]; %>
    <% firstPageToken = projects["firstPageToken"] %>
    <% nextPageToken = projects["nextPageToken"] %>
    <% prevPageToken = projects["prevPageToken"] %>
    <% if (firstPageToken) {%>
        <a href="/projects?pageToken=<%= firstPageToken %>" class="ui toggle compact blue button">FirstPage</a>
    <% } %>
    <% if (nextPageToken) {%>
        <a href="/projects?pageToken=<%= nextPageToken %>" class="ui toggle compact green button">NextPage</a>
    <% } %>
    <% if (prevPageToken) {%>
        <a href="/projects?pageToken=<%= prevPageToken %>" class="ui toggle compact orange button">PreviousPage</a>
    <% } %>
    <% for (let i = 0; i < p.length; i++) { %>
    <tr>
      <td><%= `${i + 1}.` %></td>
      <td><%= p[i].name %></td>
      <td><%= p[i].id %></td>
      <td><%= p[i].ownerId %></td>
      <td><%= p[i].tenantId %></td>
      <td><%= p[i].tenantName %></td>
      <td><%= p[i].active %></td>
      <td><%= p[i].information %></td>
      <td><%= p[i].timeCreated %></td>
      <td><%= p[i].timeModified %></td>
      <td><%= p[i].billingMode %></td>
      <td><%= p[i].dataSharingEnabled %></td>
      <td><%= p[i].storageBundle.id %></td>
      <td><%= p[i].storageBundle.bundleName %></td>
      <td><%= p[i].storageBundle.ownerId %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#projects_table").DataTable({
      pageLength: 10,
      lengthMenu: [ [10, -1], [10, "All"] ],
      "dom": '<"top"flip>t<"bottom"flip>'
    });
  });
</script>

<pre>
<%- jsonSyntaxHighlight(JSON.stringify(projects, null, 2)) %>
</pre>

<%- include("partials/footer") %>

