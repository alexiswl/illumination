<% include ../partials/header %>

<h1 class="title"><%= `Available Workgroups` %></h1>

<table
  id="workgroup_table"
  class="ui striped selectable celled compact table"
  style="width:100%"
>
  <thead>
    <tr>
      <th>N</th>
      <th>Name</th>
      <th>Description</th>
      <th>ID</th>
    </tr>
  </thead>
  <tbody>
    <% workg = wg["items"]; %>
    <% for (let i = 0; i < workg.length; i++) { %>
    <tr>
      <td><%= `${i + 1}.` %></td>
      <td><%= workg[i].name %></td>
      <td><%= workg[i].description %></td>
      <td><%= workg[i].id %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#workgroup_table").DataTable({
      pageLength: 10,
      lengthMenu: [ [10, -1], [10, "All"] ],
      "dom": '<"top"flip>t<"bottom"flip>'
    });
  });
</script>

<pre>
<%- jsonSyntaxHighlight(JSON.stringify(wg, null, 2)) %>
</pre>

<% include ../partials/footer %>

