<% include ../partials/header %>

<h1>List of Workflows</h1>

<table id="workflow_table" class="cell-border display compact">
   <thead>
      <tr>
         <th>N</th>
         <th>Name</th>
         <th>ID</th>
         <th>Versions</th>
         <th>Creator</th>
         <th>TimeCreated</th>
         <th>Modifier</th>
         <th>TimeModified</th>
      </tr>
   </thead>
   <tbody>

      <% wflows = wflows["items"]; %>
      <% for (let i = 0; i < wflows.length; i++) { %>
      <tr>
         <td> <%= `${i + 1}.` %></td>
         <td> <%= wflows[i].name %></td>
         <td> <a href="/workflows/<%= wflows[i].id %>"><%= wflows[i].id %></a></td>
         <td> <a href="/workflows/<%= wflows[i].id %>/versions">versions</a></td>
         <td> <%= id2username(wflows[i].createdBy) %></td>
         <td> <%= format_date(wflows[i].timeCreated) %></td>
         <td> <%= id2username(wflows[i].modifiedBy) %></td>
         <td> <%= format_date(wflows[i].timeModified) %></td>
      </tr>
      <% } %>
   </tbody>
</table>

<script>
   $(document).ready(function () {
      $('#workflow_table').DataTable();
   });
</script>

<% include ../partials/footer %>